{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "lib": ["es6"],
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "src/__tests__",
    "src/__mocks__",
    "**/*.spec.ts"
  ]
}
